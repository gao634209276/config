{
  "coc.preferences.rootPatterns": [
    "run.sh",
    "pom.xml",
    "setup.py",
    ".root",
    ".git",
    ".svn"
  ],
  // "coc.preferences.hoverTarget": "preview",
  // "coc.preferences.hoverTarget": "float",
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.useQuickfixForLocations": false,
  "coc.preferences.messageLevel": "error",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "json",
    "html",
    "python",
    "markdown",
    "javascript",
    "typescript"
  ],
  "suggest.autoTrigger": "always",
  "suggest.detailMaxLength": 60,
  "suggest.detailField": "preview",
  "suggest.enablePreview": true,
  "suggest.floatEnable": true,
  "suggest.timeout": 5000,
  "suggest.noselect": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.triggerCompletionWait": 100,
  "suggest.echodocSupport": true,
  "highlight.document.enable": true,
  "codeLens.enable": false,
  "diagnostic.enable": true,
  "diagnostic.errorSign": "×",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "I",
  "diagnostic.hintSign": "H",
  "diagnostic.displayByAle": false,
  //"diagnostic.refreshOnInsertMode": false,
  "diagnostic.checkCurrentLine": false,
  "diagnostic.enableMessage": "jump",
  "diagnostic.virtualTextPrefix": " ❯❯❯ ",
  "diagnostic.virtualText": true,
  "explorer.width": 30,
  "explorer.quitOnOpen": true,
  "explorer.sources": [
    {
      "name": "buffer",
      "expand": false
    },
    {
      "name": "file",
      "expand": true
    }
  ],
  "explorer.file.column.indent.indentLine": true,
  "explorer.file.showHiddenFiles": false,
  "explorer.buffer.showHiddenBuffers": false,
  "explorer.previewAction.onHover": false,
  "yaml.format.enable": true,
  "json.format.enable": true,
  "json.enable": true,
  "yank.enableCompletion": false,
  "yank.highlight.enable": false,
  "prettier.eslintIntegration": true,
  "prettier.useTabs": false,
  "prettier.formatterPriority": 1,
  "typescript.suggestionActions.enabled": true,
  "typescript.format.enabled": true,
  "python.jediEnabled": true,
  "python.autoComplete.addBrackets": true,
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Path": "autopep8",
  "python.formatting.autopep8Args": ["--max-line-length=120"],
  "python.sortImports.path": "isort",
  "python.pythonPath": "/opt/miniconda2/envs/python2.7/bin/python",
  "python.condaPath": "/opt/miniconda2/bin/conda",
  "clangd.enabled": true,
  "clangd.path": "clangd",
  "git.showCommitInFloating": true,
  "git.branchCharacter": "ᚠ"
}
